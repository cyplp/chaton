<metal:main use-macro="load: layout.pt" >
  <div class="col-md-9" metal:fill-slot="content">
    <article >
      <div>
	<div><strong>Title </strong> : ${video.title}</div>
	<div><strong>From </strong> : ${video.owner}</div>
	<div><strong>Date :</strong> :${video.created}</div>
	<div><strong>Description</strong> : ${video.description}</div>

	<div>
	  <strong>Tags :</strong>
	  <tal:for repeat="tag video.tags">
	    <a href="${request.route_path('tag', id=tag)}">${tag}</a>
	  </tal:for>
	</div>

	<form class="form" method="POST" action="${request.route_path('addtag', id=video._id)}">
	  <input type="text" name="tag"/>
	  <button class="btn btn-success">Tag !</button>
	</form>

	<form class="form" method="POST" action="${request.route_path('addcomment', id=video._id)}">
	  <textarea name="comment"></textarea>
	  <button class="btn btn-success">Comment !</button>
	</form>
      </div>
    </article>
  </div>
</metal:main>




